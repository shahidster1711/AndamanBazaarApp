{
  "inputs": [
    {
      "id": "api_token",
      "type": "promptString",
      "description": "Enter your Hostinger API token (required)"
    },
    {
      "id": "supabase_token",
      "type": "promptString",
      "description": "Enter your Supabase Personal Access Token (required)"
    }
  ],
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ],
      "startupTimeoutSeconds": 300
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--access-token",
        "${input.supabase_token}"
      ]
    },
    "hostinger-mcp": {
      "command": "npx",
      "args": [
        "hostinger-api-mcp@latest"
      ],
      "env": {
        "API_TOKEN": "${input.api_token}"
      }
    },
    "glean_default": {
      "httpUrl": "https://singlestore-be.glean.com/mcp/default"
    }
  }
}
